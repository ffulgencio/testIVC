
@{
    ViewBag.Title = "Index";
}

<h1>Listado de Ciudades</h1>
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"> Create new </button>
<div>
    <table class="table table-striped">
        <thead>
            <tr>

                <th> Nombre </th>
                <th> Ciudad </th>
                <th>CiudadId</th>
                <th><button data-bind="click:refresh">Refress</button></th>
            </tr>
        </thead>

        <tbody data-bind="foreach: sectores">
            <tr>
                <td data-bind="text:sectorId, visible:false"></td>
                <td data-bind="text:nombre"></td>
                <td data-bind="text:ciudad"></td>
                <td data-bind="text:ciudadId"></td>

                <td>
                    <button class="btn btn-info btn-sm" data-bind="click: $root.editar" data-toggle="modal" data-target="#myModal">Editar</button>
                    <button class="btn btn-danger btn-sm" data-bind="click: $root.borrarSector">Borrar</button>
                </td>
            </tr>
        </tbody>

    </table>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Registro de sectores </h4>
            </div>
            <div class="modal-body">
                <form>
                    <!-- ko with: sector -->
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" data-bind="value: nombre" />
                    </div>
                    <div class="form-group">
                        <label for="nombre">Pais</label>
                        <select class="form-control" data-bind="options:$parent.paises, optionsText: 'nombre', optionsValue:'paisId', value: paisSelectedId, optionsCaption: 'select one' "></select>
                    </div>

                    <div class="form-group">
                        <label for="nombre">Ciudad</label>
                        <select class="form-control" data-bind="options:$parent.ciudades, optionsText: 'nombre', optionsValue:'ciudadId', value: ciudadId, optionsCaption: 'select one' "></select>
                    </div>
                    @*  <span data-bind="text:ciudadId"></span>*@

                    <div class="form-group">
                        <input type="button" class="btn btn-primary btn-lg btn-block" data-bind="click: sectorId() == null || sectorId() == undefined ? $parent.createSector : $parent.updateSector" value="Guardar" data-dismiss="modal" />
                    </div>
                    <!-- /ko -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click:close">Close</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="~/KoFiles/sectoresViewModel.js"></script>
}

