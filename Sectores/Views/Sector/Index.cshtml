
@{
    ViewBag.Title = "Index";
}

<h1>Listado de Ciudades</h1>

<div>
    <table class="table table-striped">
        <thead>
            <tr>

                <th> Nombre </th>
                <th> Ciudad </th>
                <th> Acciones</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: sectores">
            <tr>
                <td data-bind="text:sectorId, visible:false"></td>
                <td data-bind="text:nombre"></td>
                <td data-bind="text:ciudad"></td>
                <td>
                    <button class="btn btn-info btn-sm" data-bind="click: $root.editar"  data-toggle="modal" data-target="#myModal">Editar</button>
                    <button class="btn btn-danger btn-sm" data-bind="click: $root.borrarSector">Borrar</button>
                </td>
            </tr>
        </tbody>

    </table>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Registro de sectores </h4>
            </div>
            <div class="modal-body">
                <form >
                    <!-- ko with:sector -->
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" data-bind="value:nombre" />
                    </div>
                    <div class="form-group">
                        <label for="nombre">Ciudad</label>
                        <select class="form-control" data-bind="value:ciudad">
                            <option>Santo Domingo</option>
                            <option>Barahona</option>
                        </select>
                    </div>
                    <!-- /ko -->
                    <div class="form-group">
                        
                        <input type="button" class="btn btn-primary btn-lg btn-block" data-bind="click: updateSector" value="Guardar" data-dismiss="modal"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="~/KoFiles/sectoresViewModel.js"></script>
}

